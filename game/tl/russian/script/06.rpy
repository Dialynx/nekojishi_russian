translate russian s06_c940408a:



    voice voice_file.lpdcat(6,18)
    lpdcat angry "\"Мы не спорим!\" " with hshake


translate russian s06_03e9050f:



    voice voice_file.lpdcat(6,19)
    lpdcat laugh "\"Я {i}лучший{/i} друг Ляо, не так ли?\" "


translate russian s06_3b23b615:


    avt "\"Эээ...\" "


translate russian s06_cc4946b0:


    avt "\"Правда?\" "


translate russian s06_d25fe53e:



    voice voice_file.tig(6,19)
    tig frown "\"Верь во что хочешь, делай как знаешь, но в конце концов, ты вернёшься в Мяоли совсем один.\" "


translate russian s06_238e41a4:



    voice voice_file.lpdcat(6,20)
    lpdcat pout "\"Ты самый скучный старик!\" "


translate russian s06_e44e2830:



    voice voice_file.tig(6,20)
    tig normal "\"Если тебе что-то не нравится, то почему бы тебе не уйти прямо сейчас?\" "


translate russian s06_ffa2c45b:



    voice voice_file.lpdcat(6,21)
    lpdcat laugh "\"Как я мог?! Ты самый лучший старик!\" "


translate russian s06_cb30dc8d:



    voice voice_file.tig(6,21)
